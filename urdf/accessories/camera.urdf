<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="imu">
    <xacro:property name="wheel_x_offset" value="0.11" />

      <link name="camera_link">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.01"/>
          <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>
        
        <visual>
          <origin xyz="0 0 0" rpy="1.5708 0 1.5708"/>
          <geometry>
            <box size="0.12 0.06 0.02"/>
          </geometry>
          <material name="black">
            <color rgba="0.1 0.1 0.1 1.0"/>
          </material>
        </visual>
        
        <collision>
          <origin xyz="0 0 0" rpy="1.5708 0 1.5708"/>
          <geometry>
            <box size="0.03 0.03 0.02"/>
          </geometry>
        </collision>
      </link>

    <!-- Joint from head to camera - mounted at front of head -->
    <joint name="camera_joint" type="fixed">
      <origin xyz="${wheel_x_offset + 0.05} 0 0.08" rpy="0 0 0"/>
      <parent link="chassis_link"/>
      <child link="camera_link"/>
    </joint> 

    <joint name="camera_optical_joint" type="fixed">
        <origin xyz="0 0.0 0.0" rpy="1.5708 0.0 1.5708" />
        <parent link="camera_link" />
        <child link="camera_link_optical" />
    </joint>

  <link name="camera_link_optical"></link> 
 <gazebo reference="camera_link">
      <sensor name="camera" type="camera">
        <pose>0 0 0 0 0 0</pose>
        <always_on>1</always_on>
        <topic>camera</topic>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <camera>
          <horizontal_fov>1.1</horizontal_fov>
          <image>
            <format>R8G8B8</format>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.05</near>
            <far>10.0</far>
          </clip>
        </camera>
      </sensor>
  </gazebo>

</robot>